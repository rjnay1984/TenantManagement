@page
@model Identity.Pages.Users.IndexModel
@{
    ViewData["title"] = "Users";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="d-flex justify-content-between align-items-center">
    <h1>Users</h1>
    <a asp-page="./Create" class="btn btn-primary">Create New User</a>
</div>

@if (Model.AppUsers.Any())
{
    <table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.AppUsers[0].Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.AppUsers[0].FirstName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.AppUsers[0].LastName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.AppUsers[0].Role)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.AppUsers)
            {
                <tr>
                    <td>@Html.DisplayTextFor(modelItem => user.Email)</td>
                    <td>@Html.DisplayFor(modelItem => user.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => user.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => user.Role.Name)</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@user.Id">Details</a> |
                        <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@user.Id" class="text-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <code>There are no users.</code>
}