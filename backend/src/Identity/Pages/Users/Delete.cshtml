@page "{id}"
@model Identity.Pages.Users.DeleteModel
@{
    ViewData["title"] = "Delete";
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<h1>Delete</h1>

<h3 class="text-danger">Are you sure you want to delete this user?</h3>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AppUser.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(modelItem => modelItem.AppUser.Email)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AppUser.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(modelItem => modelItem.AppUser.FirstName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AppUser.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(modelItem => modelItem.AppUser.LastName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserRole)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(modelItem => modelItem.UserRole)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AppUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

